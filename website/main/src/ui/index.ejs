<%- include("include/base.ejs", { title: "Home" }) %> <%-
include("include/header.ejs", { user }) %> <% const buttons = [{ link:
"/links/invite", text: "Invite", externalLink: true }, { link: "https://discord.gg/HQn5cyrG3a", text: "Support Server", externalLink: true }] %>

<main
    class="mt-10 flex flex-col items-center justify-center rounded-3xl bg-gray-700 p-4 text-white"
>
    <div class="m-5 flex items-center justify-center">
        <div class="mr-20 flex w-full flex-col justify-center text-center">
            <h1 class="mb-2 text-4xl font-extrabold">Caniventure</h1>
            <p class="mb-4 text-xl">The Caniballistic Discord Bot</p>
            <div class="flex flex-row justify-center gap-4">
                <% buttons.forEach((item, index) => { %> <% if (index === 0) {
                %>
                <a
                    href="<%= item.link %>"
                    target="<%= item.externalLink ? "_blank" : "_self" %>"
                    class="rounded-2xl border-2 border-primary-300 px-4 py-2 text-primary-300 duration-700 hover:translate-y-1 hover:scale-110 hover:bg-primary-300 hover:text-white"
                    ><%= item.text %>
                </a>
                <% } else { %>
                <a
                    href="<%= item.link %>"
                    target="<%= item.externalLink ? "_blank" : "_self" %>"
                    class="rounded-2xl border-2 border-accent-700 px-4 py-2 text-accent-400 duration-700 hover:translate-y-1 hover:scale-110 hover:bg-accent-700 hover:text-white"
                    ><%= item.text %>
                </a>
                <% } %> <% }) %>
            </div>
        </div>
        <div class="mr-10 flex w-full justify-end">
            <img
                src="/images/icon.png"
                alt="Caniventure logo"
                class="h-48 w-48 -rotate-6 rounded-3xl shadow-xl duration-1000 hover:translate-y-1 hover:rotate-6 hover:scale-110 hover:shadow-2xl hover:shadow-primary-200"
            />
        </div>
    </div>
    <div class="m-5">
        <h2 class="mb-3 font-bold text-2xl">Features</h2>
        <div class="grid grid-cols-2 gap-3">
            <div
                class="flex flex-col items-center justify-center rounded-3xl bg-gray-500 p-5 shadow-2xl">
                <div class="mt-3 bg-gradient-to-br from-gray-400 to-gray-200 rounded-3xl p-4 duration-700 hover:scale-110 hover:rotate-6">
                    <svg  xmlns="http://www.w3.org/2000/svg"  width="48"  height="48"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github text-black"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>
                </div>
                <h3 class="my-3 text-2xl font-bold">Open Source</h3>
                <p class="text-center">Caniventure is open source and always will be, you can view our source code, contribute to it, self-host the bot, anything!</p>
            </div>
            <div
                class="flex flex-col items-center justify-center rounded-3xl bg-gray-500 p-5 shadow-2xl">
                <div class="mt-3 bg-gradient-to-br from-gray-400 to-gray-200 rounded-3xl p-4 duration-700 hover:scale-110 hover:-rotate-6">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-circle-check text-black"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path><path d="M9 12l2 2l4 -4"></path></svg>
                </div>
                <h3 class="my-3 text-2xl font-bold">Easy to use</h3>
                <p class="text-center">Caniventure is a very simple and easy to use Discord bot.</p>
            </div>
        </div>
    </div>
    <div class="m-5 bg-gray-500 rounded-3xl p-5">
        <h2 class="mb-3 font-bold text-2xl">What are you waiting for?</h2>
        <p class="mb-5">Invite Caniventure to your server today!</p>
        <a
            href="/invite"
            class="rounded-2xl border-2 border-primary-300 px-4 py-2 text-primary-300 duration-700 hover:translate-y-1 hover:scale-110 hover:bg-primary-300 hover:text-white"
            >Invite</a>
    </div>
</main>
